<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:gravity="center"
    android:orientation="vertical"
android:layout_gravity="center"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_19sdp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioG_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="1"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/ch_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:text="زن"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/ch_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:text="مرد"
                    android:textStyle="bold" />


            </RadioGroup>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="جنسیت"


            />


    </LinearLayout>


    <!--   <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:layout_weight="1"
               android:drawableTop="@drawable/ic_male"
               android:gravity="center" />

           <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:layout_weight="1"
               android:drawableTop="@drawable/ic_female"
               android:gravity="center" />


       </LinearLayout>-->


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        android:elevation="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_6sdp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="نام خود را وارد کنید"
                android:inputType="textPersonName"
                android:id="@+id/txt_userName"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <NumberPicker
                    android:id="@+id/numberPicker_age"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="2"
                    android:theme="@style/AppTheme.Picker"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.75"
                    android:text="سن"
                    android:textSize="@dimen/_12sdp"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"

                >


                <NumberPicker
                    android:id="@+id/numberPicker_weight"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="2"

                    android:theme="@style/AppTheme.Picker" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.75"
                    android:text="وزن(کیلوگرم)"
                    android:textSize="@dimen/_12sdp"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"

                >


                <NumberPicker
                    android:id="@+id/numberPicker_height"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="2"
                    android:theme="@style/AppTheme.Picker" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.75"
                    android:text="قد(سانتی متر)"
                    android:textSize="@dimen/_12sdp"

                    />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_save_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/bg_btn_save"
        android:text="ذخیره"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_update_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/bg_btn_save"
        android:text="به روز رسانی اطلاعات"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_delete_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/bg_btn_save"
        android:text="حذف اطلاعات"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/bg_btn_save"
        android:text="نمایش اطلاعات"
        android:textColor="#fff" />

</LinearLayout>



